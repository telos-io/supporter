<% if @input.errors.any? %>
  <ul>
    <%= @input.errors.full_message.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @input do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.radio_button(:department, "Sales") %>
    <%= f.label(:department_sales, "Sales") %>
    <%= f.radio_button(:department, "Marketing") %>
    <%= f.label(:department_marketing, "Marketing") %>
    <%= f.radio_button(:department, "Technical") %>
    <%= f.label(:department_marketing, "Technical") %>
  </div>
  <div>
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>
  <%= f.submit "Add Support Ticket" %>
<% end %>
